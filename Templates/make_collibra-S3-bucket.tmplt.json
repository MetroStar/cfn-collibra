{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Conditions": {
    "SetBucketName": {
      "Fn::Not": [ {
        "Fn::Equals": [
          { "Ref": "CollibraBackupBucket" },
          ""
        ]
      } ]
    }
  },
  "Description": "This template sets up the S3 Bucket used by an Collibra instance.",
  "Parameters": {
    "CollibraBackupBucket": {
      "Description": "S3 Bucket to host Collibra content. (Optional parameter)",
      "Type": "String",
      "AllowedPattern": "^[a-zA-Z][a-zA-Z0-9-]*[a-zA-Z0-9]*$|^$"
    }
  },
  "Resources": {
    "CollibraS3Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "BucketOwnerFullControl",
        "BucketName": {
          "Fn::If": [
            "SetBucketName",
            { "Ref" : "CollibraBackupBucket" },
            { "Ref" : "AWS::NoValue" }
          ]
        }
      }
    }
  },
  "Outputs": {
    "CollibraBucketName": {
      "Value": { "Ref": "CollibraS3Bucket" },
      "Description": "Collibra S3 Bucket Name."
    },
    "CollibraBucketArn": {
      "Value": { "Fn::GetAtt": [ "CollibraS3Bucket", "Arn" ] },
      "Description": "Collibra S3 Bucket ARN."
    }
  }
}
